<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= actor.name %> - Movie Mafia</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="/css/loader.css">
  <script src="/js/loader.js"></script>
</head>
<body>

    <div id="loader" class="loader-container">
        <div class="loader"></div>
    </div>

<header class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand mx-auto" href="/">Movie Mafia</a>
    </div>
</header>

  <section class="container my-5">
    <div class="row">
      <div class="col-md-4">
        <img src="https://image.tmdb.org/t/p/w500/<%= actor.profile_path %>" class="img-fluid rounded" alt="<%= actor.name %>">
      </div>
      <div class="col-md-8">
        <h1><%= actor.name %></h1>
        <p><strong>Birthday:</strong> <%= actor.birthday %></p>
        <p><strong>Place of Birth:</strong> <%= actor.place_of_birth %></p>
        <p><strong>Biography:</strong> <%= actor.biography ? actor.biography : "No biography available." %></p>
      </div>
    </div>

    <div class="mt-4">
      <h3>Movies</h3>
      <div class="row">
        <% movies.forEach(movie => { %>
          <div class="col-md-3">
            <div class="card">
              <img src="https://image.tmdb.org/t/p/w500/<%= movie.poster_path %>" class="card-img-top" alt="<%= movie.title %>">
              <div class="card-body">
                <h5 class="card-title"><%= movie.title %></h5>
                <p class="card-text"><%= movie.overview.slice(0, 100) %>...</p>
                <a href="/movie/<%= movie.id %>" class="btn btn-primary">View Movie</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-dark text-white text-center py-3">
    <p>&copy; 2025 Movie Mafia</p>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
